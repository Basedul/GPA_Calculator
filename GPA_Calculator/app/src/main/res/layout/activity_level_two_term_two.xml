                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/CSE_2207_ID_TEXT"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="CSE_2207"
                android:textSize="30sp"/>

            <Spinner
                android:id="@+id/CSE_2207_ID_spinner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:entries="@array/GPA"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/CSE_2207_Seasonal_ID_TEXT"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textSize="28sp"
                android:text="CSE_2207_Seasonal" />

            <Spinner
                android:id="@+id/CSE_2207_Seasonal_ID_spinner"
                android:layout_width="0dp"
